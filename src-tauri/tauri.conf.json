{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "MythicAI",
    "version": "0.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      },
      "path": {
        "all": true
      },
      "window": {
        "all": true,
        "close": true,
        "hide": true,
        "show": true,
        "maximize": true,
        "minimize": true,
        "unmaximize": true,
        "unminimize": true,
        "startDragging": true
      },
      "fs": {
        "all": true,
        "scope": [
          "plugins/**/*"
        ]
      }
    },
    "bundle": {
      "active": true,
      "icon": [
        "icons/icon.png"
      ],
      "resources": [
        "plugins/**/*",
        "backend/**/*"
      ],
      "identifier": "com.vortex-dev",
      "targets": "all"
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "decorations": false,
        "fullscreen": false,
        "resizable": true,
        "title": "MythicAI",
        "width": 800,
        "height": 600,
        "minWidth": 512,
        "minHeight": 512
      }
    ]
  }
}